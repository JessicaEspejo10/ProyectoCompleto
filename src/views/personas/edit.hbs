<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Editar una persona </h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post" enctype="multipart/form-data">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text"> Nombre Persona </label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejm: Jessica" value="{{persona.name}}" autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text"> Apellido Persona </label>
                            <input class="form-control" type="text" name="lastname" id="lastname" placeholder="Ejm: Espejo" value="{{persona.lastname}}" autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text"> Edad </label>
                            <input class="form-control" type="number" name="age" id="age" placeholder="Ejm: 29" value="{{persona.age}}" autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="detail" class="input-group-text"> Detalle/Observaci√≥n </label>
                            <input class="form-control" type="text" name="detail" id="detail" placeholder="Ejm: Empleado" value="{{persona.detail}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                                <input class="form-control" type="file" name="file" id="file" autofocus>
                        </div>
                        {{#if persona.image}}
                            <div class="input-group mt-2">
                                    <img src="/uploads/{{persona.image}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px; display:block ">
                            </div>
                        {{/if}}
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>